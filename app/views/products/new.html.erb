

<h1>New Product</h1>

  <div class="col-6">

<%= form_for @product do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, :class=>"form-control"%>
  </div>


  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class=>"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, :class=>"form-control"%>
</div>
</div>
  <%= f.submit :class=>"form-control" %>
<% end %>
