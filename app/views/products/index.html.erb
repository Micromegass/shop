<h1>Our Technological Products</h1> <br>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= link_to product.name, product_path(product) %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td><%= link_to "Edit", product_path(product) %></td>
        <td><%= link_to "Delete", product_path(product), :confirm => "sure?", :method => :delete %></td>
      </tr>


    <% end %>



  </tbody>
</table>

